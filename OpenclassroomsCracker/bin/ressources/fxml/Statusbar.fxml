<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>

<Pane id="statusbar" maxHeight="-Infinity" maxWidth="-Infinity"
	minHeight="-Infinity" minWidth="-Infinity" prefHeight="30.0"
	prefWidth="600.0" stylesheets="@../css/statusbarStylesheets.css"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="com.aioschool.openclassroomscracker.StatusbarController">
	<children>
		<HBox alignment="CENTER_RIGHT" prefHeight="30.0"
			prefWidth="745.0" spacing="10.0">
			<children>
				<Label id="versionLabel" text="V1.0">
					<HBox.margin>
						<Insets right="10.0" top="3.0" />
					</HBox.margin>
				</Label>
				<Button id="checkUpdateButton" mnemonicParsing="false"
					onAction="#handleCheckUpdateButtonAction" text="Check Update">
					<HBox.margin>
						<Insets right="9.0" />
					</HBox.margin>
				</Button>
			</children>
		</HBox>
	</children>
</Pane>
